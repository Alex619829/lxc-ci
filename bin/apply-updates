#!/bin/sh
. /etc/os-release

if [ "${ID}" = "arch" ]; then
    pacman -Syu --noconfirm
elif [ "${ID}" = "ubuntu" ] || [ "${ID}" = "debian" ] || [ "${ID}" = "elementary" ]; then
    apt update
    apt dist-upgrade -y
    apt autoremove --purge -y
elif [ "${ID}" = "ubuntu-core" ]; then
    snap refresh
elif [ "${ID}" = "fedora" ]; then
    dnf upgrade --refresh -y
elif [ "${ID}" = "opensuse" ]; then
    zypper update -y
elif [ "${ID}" = "solus" ]; then
    eopkg update-repo -y
    eopkg upgrade -y
fi
