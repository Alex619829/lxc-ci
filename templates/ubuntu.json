{
    "create_message": ["You just created an Ubuntu container ",
                       "(release=RELEASE, arch=ARCH, variant=VARIANT)\n\n"
                       "To enable sshd, run: apt-get install openssh-server"],
    "expiry": 30,
    "templates": ["/etc/hostname", "/etc/hosts"],
    "config_user": ["common", "userns"],
    "config_system": ["common"],
    "template_arch": {"amd64": "amd64",
                      "i386": "i386",
                      "armel": "armel",
                      "armhf": "armhf",
                      "arm64": "arm64",
                      "ppc64el": "ppc64el"},
    "template_args": ["-r", "RELEASE", "-a", "ARCH"],
    "post_create": ["passwd -d root",
                    "deluser ubuntu",
                    "rm -Rf /home/ubuntu",
                    "apt-get remove --purge openssh-server -y",
                    "rm /etc/*-",
                    "rm /etc/resolvconf/resolv.conf.d/original",
                    "rm /etc/resolvconf/resolv.conf.d/tail"]
}
